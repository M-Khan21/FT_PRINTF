#include "ft_printf.h"

//Function to print string
//ft_print-string i.e ft_pstr
int	ft_pstr(char *str)
{
	unsigned int	i;

	i = 0;
	if (!str)
	{
		ft_putstr_fd("(null)", 1);
		return (6);
	}
	ft_putstr_fd(str, 1);
	while (str[i])
		i++;
	return (i);
}

